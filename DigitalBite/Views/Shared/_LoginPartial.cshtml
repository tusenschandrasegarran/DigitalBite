@using Microsoft.AspNetCore.Identity
@using DigitalBite.Areas.Identity.Data

@inject SignInManager<DigitalBiteAdmin> SignInManager
@inject UserManager<DigitalBiteAdmin> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage" class="nav-link" style="color: #ffffff" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link" style="color: #ffffff">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link" style="color: #ffffff" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" style="color: #ffffff" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
